{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "target": "es5",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@resin.io"
        ]
    },
    "include": [
        "typings/*.d.ts",
        "tests/typings/*.d.ts",
        "lib/**/*.ts",
        "lib/**/*.d.ts"
    ]
}
